<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                    xmlns:resources="clr-namespace:Phosphate.View.Resources"
                    xmlns:converters="clr-namespace:Phosphate.Converters">
    
    <converters:PathToImageSourceConverter x:Key="PathConverter"/>
    
    <Style TargetType="{x:Type resources:ExecutableItemView}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type resources:ExecutableItemView}">
                    <StackPanel Margin="8" Orientation="Vertical">
                        <ui:Image Source="{TemplateBinding IconPath, Converter={StaticResource PathConverter}, ConverterParameter={TemplateBinding ExePath}}"
                                  Width="{TemplateBinding IconWidth}" Height="{TemplateBinding IconHeight}"/>
                        <ui:TextBlock Text="{TemplateBinding  DisplayName}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>