<Application x:Class="Phosphate.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Resources/Theme/Dark.xaml" />
                
                <ResourceDictionary Source="/View/Resources/Theme/Control/Button.xaml" />
                <ResourceDictionary Source="/View/Resources/Theme/Control/CheckBox.xaml" />
                <ResourceDictionary Source="/View/Resources/Theme/Control/RadioButton.xaml" />
                <ResourceDictionary Source="/View/Resources/Theme/Control/TextBox.xaml" />
                <ResourceDictionary Source="/View/Resources/Theme/Control/ComboBox.xaml" />
                <ResourceDictionary Source="/View/Resources/Theme/Control/ListBox.xaml" />
                <ResourceDictionary Source="/View/Resources/Theme/Control/ListView.xaml" />
                <ResourceDictionary Source="/View/Resources/Theme/Control/ListViewItem.xaml" />
                <ResourceDictionary Source="/View/Resources/Theme/Control/ScrollViewer.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
